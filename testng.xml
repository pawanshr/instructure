<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite thread-count="2" name="Suite" parallel="tests" >
    <listeners>
        <listener class-name="com.sevadevelopment.utility.InvokedMethodListener"></listener>
    </listeners>
    <test name="Test In Chrome"  parallel="methods" thread-count="2">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="com.sevadevelopment.getbridge.tests.TestBridgeTopNavLinks" />
        </classes>
    </test>
    <test name="Test In Firefox"  parallel="methods" thread-count="2">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.sevadevelopment.getbridge.tests.TestBridgeTopNavLinks" />
        </classes>
    </test>
</suite>